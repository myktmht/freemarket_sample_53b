= render "shared/single-header"
.login
  .login__no-account
    %P アカウントをお持ちでない方はこちら
    = link_to signup_path, class: "login__no-account__btn login-btn" do
      新規会員登録
  .login__form-inner
    %button.facebook-login.login-btn
      = link_to user_facebook_omniauth_authorize_path do
        %i.fa.fa-facebook-square
        Facebookでログイン 
    %button.google-login.login-btn
      = link_to user_google_omniauth_authorize_path do
        Googleでログイン
    
  .login__form-inner_second
    = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
      .field
        = f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "メールアドレス"
      .field.field__pw
        = f.password_field :password, autocomplete: "current-password", placeholder: "パスワード"
      .actions
        = f.submit "ログイン", class: "actions__btn"
      = render "devise/shared/links"
= render "shared/single-footer"
