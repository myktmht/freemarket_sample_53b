.item-detail
  .item-detail-box
    .item-name
      %h1
        = @item.name 
    .item-table
      .item-image
        %figure-main
        =image_tag ("#{@item.images[0].name}")
      .item-profile
        %table{:border => "2"}
          %tr
            %th 出品者
            %td #{@item.user.nickname}
          %tr
            %th カテゴリー
            %td カテゴリーページ
          %tr
            %th 状態
            %td #{@item.condition}
          %tr
            %th カテゴリー
            %td #{@item.category.name}

  .item-price
    %span ¥#{@item.price.to_s(:delimited)}
  .item-content
    %p  #{@item.description}
