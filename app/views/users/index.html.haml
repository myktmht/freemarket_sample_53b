= render "shared/single-header"

.single-container
  %main.single-main
    %section.single-main__container
      %h2.single-main__container__header 新規会員登録
      .single-main__container__inner
        .single-main__container__inner__content
          =link_to "", class: "contents__btn contents__btn__mail" do
            %i.fa.fa-envelope-o
            メールアドレスで登録
          =link_to "", class: "contents__btn contents__btn__facebook" do
            %i.fa.fa-facebook
            Facebookで登録
          =link_to "", class: "contents__btn contents__btn__google" do
            = image_tag '/images/google.svg', class: 'contents__btn__google__logo'
            Googleで登録

= render "shared/single-footer"